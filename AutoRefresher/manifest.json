{
  "manifest_version": 3,
  "name": "ট্যাব অটো রিফ্রেশ",
  "version": "1.0",
  "description": "সিলেক্টেড ট্যাব র‍্যান্ডম বিরতিতে রিফ্রেশ করে",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "storage", "notifications", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}