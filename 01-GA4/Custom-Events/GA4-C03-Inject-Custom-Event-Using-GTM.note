<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form');
    const submitButton = form.querySelector('button[type="submit"]');

    submitButton.addEventListener('click', function (e) {
      // Prevent actual form submission
      e.preventDefault();

      // Get values from the form
      const color = document.getElementById('colorInput').value;
      const animal = document.getElementById('animalSelect').value;
      const preference = document.querySelector('input[name="preference"]:checked')?.value || '';
      const comments = document.getElementById('commentsBox').value;
      const agreed = document.getElementById('termsCheck').checked;

      // Push data to the dataLayer
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'formSubmission',
        favoriteColor: color,
        favoriteAnimal: animal,
        preferenceTime: preference,
        commentsText: comments,
        termsAgreed: agreed
      });

      // Optional: You can submit the form here if needed
      // form.submit();
    });
  });
</script>

