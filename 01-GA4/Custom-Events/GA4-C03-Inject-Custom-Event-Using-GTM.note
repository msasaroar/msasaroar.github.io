<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form');
    const submitButton = form.querySelector('button[type="submit"]');

    submitButton.addEventListener('click', function (e) {
      // Prevent actual form submission
      e.preventDefault();

      // Get values from the form
      const color = document.getElementById('colorInput').value;
      const animal = document.getElementById('animalSelect').value;
      const preference = document.querySelector('input[name="preference"]:checked')?.value || '';
      const comments = document.getElementById('commentsBox').value;
      const agreed = document.getElementById('termsCheck').checked;

      // Push data to the dataLayer
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'formSubmission',
        favoriteColor: color,
        favoriteAnimal: animal,
        preferenceTime: preference,
        commentsText: comments,
        termsAgreed: agreed
      });

      // Optional: You can submit the form here if needed
      // form.submit();
    });
  });
</script>

=======================অথবা=======================

উপরোক্ত html পেইজ এর কোড এ কোন পরিবর্তন না করে এই পেইজ এর submit বাটনে ক্লিকের ফলে 
নিম্নোক্ত Custom HTML Tag এর মাধ্যমে ডেটা লেয়ারে formSubmit কাস্টম ইভেন্টটি পুশ করতে চাই এবং
পুশ করা formSubmit ইভেন্টটি ফায়ার করাতে এবং তা ট্র্যাকিং করে GA4 এ ইভেন্ট ডেটা পাঠাতে GTM এ ট্যাগ ও ট্রিগার কনফিগার করা হয়েছে। 
ব্রাঊজারে console.log(dataLayer) দিয়ে চেক করে দেখেছি formSubmit ইভেন্টটি সঠিক ডেটা সহ ডেটালেয়ারে পুশ হচ্ছে।
কিন্তু formSubmit ইভেন্টটি ফায়ার করলেও GTM এর dataLayer ভ্যারিয়েবলে data যাচ্ছেনা।

  <script>
  document.getElementById("submitBtn").addEventListener("click", function () {
    var username = document.getElementById("username").value;
    var isSubscribed = document.getElementById("subscribe").checked;
    var genderElements = document.getElementsByName("gender");
    var genderValue = "";

    for (var i = 0; i < genderElements.length; i++) {
      if (genderElements[i].checked) {
        genderValue = genderElements[i].value;
        break;
      }
    }
    // Data Layer এ push করা হচ্ছে
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: "formSubmit",
      userData: {
        name: username,
        subscribed: isSubscribed,
        gender: genderValue
      }
    });
    // Corrected alert to show the data as a single string
    alert(
      "Form data pushed to dataLayer:\n" +
      "Name: " + username + "\n" +
      "Subscribed: " + isSubscribed + "\n" +
      "Gender: " + genderValue
    );
    console.log("Form data pushed to dataLayer.");
    console.log(dataLayer);
    alert(dataLayer);
  });
</script>
