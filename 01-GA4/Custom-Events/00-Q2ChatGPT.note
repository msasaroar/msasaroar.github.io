<script>
  var now = new Date();
  var event_date = now.toISOString().split('T')[0];
  var event_time = now.toTimeString().split(' ')[0];
  var second_passed = 20;
  window.dataLayer = window.dataLayer || [];
  window.dataLayer.push({
    event: 'time_on_page_20_second',
    event_activity: '20 Seconds Passed On The Page',
    event_date: event_date,
    event_time: event_time
  });
  alert('Event Fired : 20 Seconds Passed On The Page');
</script>


