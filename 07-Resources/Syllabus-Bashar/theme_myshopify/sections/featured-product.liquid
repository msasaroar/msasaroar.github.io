                "value": "block",
                "label": "Block"
              },
              {
                "value": "dropdown",
                "label": "Dropdown"
              },
              {
                "value": "color",
                "label": "Color swatch"
              },
              {
                "value": "variant_image",
                "label": "Variant image"
              }
